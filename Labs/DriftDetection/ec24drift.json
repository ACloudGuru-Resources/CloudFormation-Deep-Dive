          "InstanceType" : { "Ref" : "InstanceType" },
          "SecurityGroupIds": [
              {
                "Ref": "InstanceSecurityGroup"
              }
          ],
          "KeyName" : { "Ref" : "KeyName" },
          "Tags" : [ {"Key" : "Name", "Value" : "Instance2"}],
          "ImageId" : { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" },
